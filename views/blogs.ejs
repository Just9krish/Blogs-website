<!DOCTYPE html>
<html>
  <%-include("./partials/head.ejs") %>
  <body class="min-h-screen flex flex-col">
    <%-include("./partials/navbar.ejs") %>
    <section class="px-4 py-8 lg:py-16 flex-1">
      <h2 class="text-lg md:text-xl lg:text-4xl font-bold text-center">
        All Blogs
      </h2>
      <div class="space-y-6 px-2 py-7 max-w-[800px] mx-auto">
        <% if (blogs.length > 0) { %> <% blogs.forEach(blog => { %>
        <div class="border border-gray-400 shadow-lg p-6 rounded-md">
          <div class="content">
            <div
              class="mb-2.5 relative before:block before:absolute before:w-[80%] before:bg-red-500 before:h-[57%] before:-z-10 before:translate-x-[-25.2px] before:rounded-r-md"
            >
              <h3
                class="font-bold m-0 text-base text-[#13E4E4] md:text-lg lg:text-2xl"
              >
                <%= blog.title %>
              </h3>
              <span class="text-gray-500"
                ><%= blog.createdAt.toLocaleDateString() %></span
              >
            </div>
            <p class="font-light text-sm md:text-base lg:text-md">
              <%= blog.snippet %>
            </p>
            <div class="flex space-x-3 mt-4">
              <a
                class="text-white bg-blue-800 hover:bg-blue-900 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2 mr-2 md:text-md lg:text-lg lg:mr-4"
                href="/blogs/<%= blog.slug %>"
                class="read-more"
                >Read More</a
              >
              <form action="/blogs/<%= blog.id%>?_method=DELETE" method="POST">
                <button
                  class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2 md:text-md lg:text-lg"
                  type="submit"
                >
                  Delete
                </button>
              </form>
            </div>
          </div>
        </div>
        <% }) %> <% } else { %>
        <p>There is no blog to display</p>
        <% } %>
      </div>
    </section>
    <%-include("./partials/footer.ejs") %>
  </body>
</html>
